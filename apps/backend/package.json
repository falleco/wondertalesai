{
  "name": "@dreamtalesai/backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "------------------ BUILDING ------------------": "",
    "auth:generate": "dotenvx run -f .env -- npx @better-auth/cli generate --config cli/auth.ts",
    "build": "nest build",
    "------------------------- LINTING -------------------------": "",
    "typecheck": "tsc --noEmit",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "------------------ TESTING ------------------": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "------------------ MIGRATIONS ------------------": "",
    "migration:create": "typeorm migration:create ./src/migrations/${0}",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ormconfig.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ormconfig.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ormconfig.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.18",
    "@aws-sdk/client-secrets-manager": "^3.974.0",
    "@better-auth/passkey": "^1.4.17",
    "@better-auth/stripe": "^1.4.17",
    "@bull-board/api": "^6.16.4",
    "@bull-board/express": "^6.16.4",
    "@bull-board/nestjs": "^6.16.4",
    "@dreamtalesai/auth": "workspace:*",
